<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_50"
    tools:context=".ui.search.SearchActivity">


    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/neutral_0"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:src="@drawable/ic_back"
            app:tint="@color/neutral_900" />

        <EditText
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Pencarian"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:singleLine="true"
            android:fontFamily="@font/regular"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/hintColor"
            android:textCursorDrawable="@null"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/clear"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_close"
            android:visibility="invisible"
            app:tint="@color/neutral_600" />

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/quran"
        android:name="com.dzikirqu.android.ui.search.quran.SearchQuranFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/prayer"
        android:name="com.dzikirqu.android.ui.search.prayer.SearchPrayerFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/notes"
        android:name="com.dzikirqu.android.ui.search.note.SearchNoteFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:alpha="0.4"
        android:background="@drawable/shadow"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>