<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.dzikirqu.android.ui.note.composer.NoteComposerViewModel" />

        <import type="com.dzikirqu.android.constants.LocaleConstants" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/neutral_0"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:isScrollContainer="false"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.compose.ui.platform.ComposeView
                    android:id="@+id/composeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/neutral_0"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/regular"
                    android:gravity="top"
                    android:hint="Tulis..."
                    android:inputType="textMultiLine"
                    android:isScrollContainer="false"
                    android:overScrollMode="never"
                    android:paddingTop="24dp"
                    android:paddingBottom="100dp"
                    android:textColor="@color/textPrimary"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/editorFooter"
                    android:layout_width="match_parent"
                    android:layout_height="128dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/divider"
            app:layout_constraintTop_toBottomOf="@id/appbar"
            android:layout_width="match_parent"
            android:background="@color/neutral_300"
            android:visibility="gone"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/bottomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/scrollDown"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="end"
                android:layout_margin="16dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/neutral_300"
                android:padding="12dp"
                android:src="@drawable/ic_double_down"
                app:tint="@color/colorPrimaryLight" />

            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/formats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/neutral_0"
                android:elevation="4dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>