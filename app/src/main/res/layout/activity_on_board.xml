<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.wagyufari.dzikirqu.ui.onboarding.OnBoardViewModel" />

        <import type="android.view.View" />

        <import type="com.wagyufari.dzikirqu.util.ResultEnum" />

        <import type="com.wagyufari.dzikirqu.constants.LocaleConstants" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/neutral_50"
        android:orientation="vertical"
        tools:context=".ui.onboarding.OnBoardActivity">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"
            android:src="@drawable/ic_dzikir"
            tools:translationY="0dp" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="24dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/regular"
            android:textColor="@color/textTertiary"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="DzikirQu by Mutiara Iman and the Community" />


    </LinearLayout>
</layout>